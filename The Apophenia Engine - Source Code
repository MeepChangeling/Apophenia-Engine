:: --- Color Pickers ---

:choose3colors
set fetchedfile=colors
call :filefetch
set color1=%name%
call :filefetch
set color2=%name%
call :filefetch
set color3=%name%
if "%color1%"=="%color2%" goto choose3colors
if "%color1%"=="%color3%" goto choose3colors
if "%color2%"=="%color3%" goto choose3colors
goto:eof

:choose2colors
set fetchedfile=colors
call :filefetch
set color1=%name%
call :filefetch
set color2=%name%
if "%color1%"=="%color2%" goto choose2colors
goto:eof

