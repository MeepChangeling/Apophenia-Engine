		if !roll!==12 set "matname=!creaturename! Impatiens"
		if !roll!==13 set "matname=!creaturename! Pepper"
		if !roll!==14 set "matname=!creaturename! Potato"
		if !roll!==15 set "matname=!creaturename! Begonia"
