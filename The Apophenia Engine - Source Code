	if "!roll!"=="3" set "newruler=Archmage" & set "newreign=20" & set "newdemocrasyflag=1"
	if "!roll!"=="4" set "newruler=High Warlock" & set "newreign=20" & set "newdemocrasyflag=1"
	set newnattypeflag=0
